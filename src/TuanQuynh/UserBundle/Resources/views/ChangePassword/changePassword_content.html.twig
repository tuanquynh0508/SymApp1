{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form 'TuanQuynhAdminBundle:Form:form_errors.html.twig' %}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Change user password</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

                {{ form_errors(form) }}

                <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password form-horizontal">
                {{ form_widget(form._token) }}
                    <div class="form-group {% if form.current_password.vars.errors is not empty %}has-error{% endif %}">
                        <label class="col-sm-2 control-label">{{ form_label(form.current_password) }}</label>

                        <div class="col-sm-10">
                            {{ form_widget(form.current_password, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                            {% for errorItem in form.current_password.vars.errors %}
                              <label class="control-label has-error" for="{{ form.plainPassword.vars.id }}">{{ errorItem.message }}</label>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group {% if form.plainPassword.first.vars.errors is not empty %}has-error{% endif %}">
                        <label class="col-sm-2 control-label">{{ form_label(form.plainPassword.first) }}</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                            {% for errorItem in form.plainPassword.first.vars.errors %}
                              <label class="control-label has-error" for="{{ form.plainPassword.vars.id }}">{{ errorItem.message }}</label>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group {% if form.plainPassword.second.vars.errors is not empty %}has-error{% endif %}">
                        <label class="col-sm-2 control-label">{{ form_label(form.plainPassword.second) }}</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                            {% for errorItem in form.plainPassword.second.vars.errors %}
                              <label class="control-label has-error" for="{{ form.plainPassword.vars.id }}">{{ errorItem.message }}</label>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-primary" type="submit">{{ 'change_password.submit'|trans }}</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
