{% use "form_div_layout.html.twig" %}

{% block form_start -%}
    {% set attr = attr|merge({class: (attr.class|default('') ~ ' form-horizontal')|trim}) %}
    {{- parent() -}}
{%- endblock form_start %}

{# WIDGET #}
{% block form_widget_simple -%}
    {% if type is not defined or 'file' != type %}
        {%- set attr = attr|merge({class: (attr.class|default('') ~ ' form-control')|trim}) -%}
    {% endif %}
    {{- parent() -}}
{%- endblock form_widget_simple %}

{% block textarea_widget -%}
    {% set attr = attr|merge({class: (attr.class|default('') ~ ' form-control')|trim}) %}
    {{- parent() -}}
{%- endblock textarea_widget %}

{% block checkbox_widget -%}
    {% set attr = attr|merge({class: (attr.class|default('') ~ ' js-switch')|trim}) %}
    {{- parent() -}}
{%- endblock %}

{% block button_widget -%}
    {% set attr = attr|merge({class: (attr.class|default('btn-default') ~ ' btn')|trim}) %}
    {{- parent() -}}
{%- endblock %}

{% block submit_widget -%}
    {% set attr = attr|merge({class: (attr.class|default('btn-primary') ~ ' btn')|trim}) %}
    {{- parent() -}}
{%- endblock %}

{% block reset_widget -%}
    {% set attr = attr|merge({class: (attr.class|default('btn-white') ~ ' btn')|trim}) %}
    {{- parent() -}}
{%- endblock %}

{# Labels #}
{%- block form_label -%}
    {% if label is not same as(false) -%}
        {% if not compound -%}
            {% set label_attr = label_attr|merge({'for': id, 'class': 'col-sm-2 control-label'}) %}
        {%- endif %}
        {% if required -%}
            {% set label_attr = label_attr|merge({'class': (label_attr.class|default('col-sm-2 control-label') ~ ' required')|trim}) %}
        {%- endif %}
        {% if label is empty -%}
            {%- if label_format is not empty -%}
                {% set label = label_format|replace({
                    '%name%': name,
                    '%id%': id,
                }) %}
            {%- else -%}
                {% set label = name|humanize %}
            {%- endif -%}
        {%- endif -%}
        <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>
        {{ translation_domain is same as(false) ? label : label|trans({}, translation_domain) }}
        {% if required %}
            <span class="required text-danger" title="This field is required">*</span>
        {% endif %}
        :
        </label>
    {%- endif -%}
{%- endblock form_label -%}

{# ROWS #}
{% block submit_row -%}
{% spaceless %}
    <div class="form-group">
        <div class="col-sm-4 col-sm-offset-2">
            {{ form_widget(form) }}
        </div>
    </div>
{% endspaceless %}
{% endblock submit_row %}

{% block button_row -%}
{% spaceless %}
    <div class="form-group">
        <div class="col-sm-4 col-sm-offset-2">
            {{ form_widget(form) }}
        </div>
    </div>
{% endspaceless %}
{% endblock button_row %}

{% block form_row -%}
    <div class="form-group{% if (not compound or force_error|default(false)) and not valid %} has-error{% endif %}">
        {{- form_label(form) -}}
        <div class="col-sm-10">
        {{- form_widget(form) -}}
        {% for attrname,attrvalue in attr %}
            {% if attrname == 'help' %}
                <span class="help-block m-b-none">{{ attrvalue|trans }}</span>
            {% endif %}
        {% endfor %}
        {{- form_errors(form) -}}
        </div>
    </div>
    <div class="hr-line-dashed"></div>
{%- endblock form_row %}

{# ERROR #}
{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
    <div class="alert alert-danger alert-dismissable">
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
        {% for error in errors %}
            <p>{{ error.message }}</p>
        {% endfor %}
    </div>
    {% endif %}
{% endspaceless %}
{% endblock form_errors %}
