{% trans_default_domain "messages" %}
{#% form_theme form 'TuanQuynhAdminBundle:Form:inspinia_layout.html.twig' %#}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>{{ title }}</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                {{ form_errors(form) }}

                {#{ form(form) }#}
                {{ form_start(form) }}
                    {{ form_row(form.title) }}
                    {{ form_row(form.slug) }}
                    {{ form_row(form.content) }}
                    {{ form_row(form.isActive) }}

					{% if entity.id is not null %}
					<div class="form-group">
						<label class="col-sm-2 control-label">{{ 'Created At'|trans }}:</label>
						<div class="col-sm-10">{{ entity.createdAt|date('Y-m-d H:i:s')}}</div>
					</div>
					<div class="hr-line-dashed"></div>

					{% if entity.updatedAt is not null %}
					<div class="form-group">
						<label class="col-sm-2 control-label">{{ 'Updated At'|trans }}:</label>
						<div class="col-sm-10">{{ entity.updatedAt|date('Y-m-d H:i:s')}}</div>
					</div>
					<div class="hr-line-dashed"></div>
					{% endif %}
					{% endif %}

					<div class="form-group">
						<div class="col-sm-4 col-sm-offset-2">
							{{ form_widget(form.save) }}
								{% if entity.id is not null %}
								<a href="{{ path('tuanquynh_admin_pagehtml_create') }}">{{ 'Add new'|trans }}</a> | 
								{% endif %}
							<a href="{{ path('tuanquynh_admin_pagehtml_index') }}">{{ 'Back to list'|trans }}</a>
						</div>
					</div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
